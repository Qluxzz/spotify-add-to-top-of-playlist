{
    "manifest_version": 2,
    "name": "Spotify: Add track to top of playlist",
    "version": "1.0",
    "author": "Andr√© Andersson",
    "homepage_url": "https://github.com/Qluxzz/spotify-add-to-top-of-playlist",
    "description": "When adding a track to a Spotify playlist, add the track to the top of the playlist instead of the bottom",
    "icons": {
        "48": "icon.svg",
        "96": "icon.svg"
    },
    "content_scripts": [
        {
            "matches": [
                "https://open.spotify.com/*"
            ],
            "js": [
                "content.js"
            ],
            "world": "MAIN"
        }
    ]
}